<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="life.hopeurl.application.mysql.example.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="life.hopeurl.application.mysql.example.entity.XmlUser">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="age" column="age" jdbcType="INTEGER"/>
            <result property="birthday" column="birthday" jdbcType="TIMESTAMP"/>
            <result property="totalAsset" column="total_asset" jdbcType="DECIMAL"/>
            <result property="introduction" column="introudction" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,username,age,
        birthday,total_asset,introudction
    </sql>


    <select id="listUserByPage" resultType="life.hopeurl.application.mysql.example.entity.XmlUser">
        select * from xml_user limit 10
    </select>
</mapper>
